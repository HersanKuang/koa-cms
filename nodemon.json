{
  "watch": ["src"],
  "ext": "ts",
  "ignore": ["src/**/*.spec.ts", "src/dist"],
  "execMap": {
    "ts": "ts-node"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "events": {
    "restart": "echo 'Koa Server has been restarted due to changes...'"
  },
  "exitcrash": true,
  "signal": "SIGTERM"
}
